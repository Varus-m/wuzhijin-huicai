.container{padding:12px;padding-bottom: 40rpx;}
.order-card{border:1px solid #f0f0f0;border-radius:8px;padding:10px;margin-bottom:12px;background: #fff;}
.row{display:flex;justify-content:space-between;margin:6px 0}
.label{color:#888;font-size: 28rpx;}
.value{color:#333;font-size: 28rpx;}
.status{color:#1890FF;font-weight: 500;}
.progress{display:flex;align-items:center;gap:8px;margin-top:8px}
.progress-bar{flex:1;height:6px;background:#f5f5f5;border-radius:6px;overflow: hidden;}
.progress-fill{height:6px;background:#52c41a;border-radius:6px}
.section-title{font-weight:600;margin:24rpx 0 16rpx;font-size: 32rpx;color: #333;}
.material-item{display:flex;flex-direction: column;border-bottom:1px solid #f5f5f5;padding:16rpx 0;}
.material-header {display: flex;justify-content: space-between;margin-bottom: 8rpx;}
.code{color:#333;font-weight: 500;}
.mstatus{color:#666;font-size: 24rpx;}
.material-info {color: #666;font-size: 26rpx;margin-bottom: 8rpx;}
.material-qty {display: flex;gap: 24rpx;font-size: 24rpx;color: #888;}
.empty{color:#888;padding:12px;text-align: center;}
.loading-overlay{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(255,255,255,0.6);display:flex;justify-content:center;align-items:center;z-index: 1000;}

/* 发运详情样式 */
.delivery-list {display: flex;flex-direction: column;gap: 24rpx;}
.delivery-card {background: #fff;border-radius: 12rpx;padding: 24rpx;box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);}
.delivery-header {display: flex;justify-content: space-between;margin-bottom: 16rpx;border-bottom: 1rpx solid #f0f0f0;padding-bottom: 16rpx;}
.delivery-header .date {font-size: 28rpx;color: #333;font-weight: 500;}
.delivery-header .logistics {font-size: 26rpx;color: #667eea;font-weight: 500;}
.delivery-info {margin-bottom: 24rpx;}
.info-row {display: flex;font-size: 26rpx;margin-bottom: 8rpx;color: #666;}
.info-row .label {color: #888;min-width: 80rpx;}
.info-row .val {flex: 1;}

.delivery-products {background: #f8f9fa;border-radius: 8rpx;padding: 16rpx;margin-bottom: 16rpx;}
.dp-header {display: flex;font-size: 24rpx;color: #888;margin-bottom: 12rpx;}
.dp-item {display: flex;font-size: 26rpx;color: #333;margin-bottom: 8rpx;}
.dp-item:last-child {margin-bottom: 0;}
.dp-name {flex: 1;}
.dp-spec {width: 200rpx;text-align: center;color: #666;}
.dp-qty {width: 100rpx;text-align: right;}

.delivery-attachments {border-top: 1rpx dashed #eee;padding-top: 16rpx;}
.att-title {font-size: 26rpx;color: #888;margin-bottom: 12rpx;display: block;}
.att-list {display: flex;flex-wrap: wrap;gap: 16rpx;}
.att-img {width: 160rpx;height: 160rpx;border-radius: 8rpx;background: #f0f0f0;}

