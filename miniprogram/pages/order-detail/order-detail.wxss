.container{padding:12px}
.order-card{border:1px solid #f0f0f0;border-radius:8px;padding:10px;margin-bottom:12px}
.row{display:flex;justify-content:space-between;margin:6px 0}
.label{color:#888}
.value{color:#333}
.status{color:#1890FF}
.progress{display:flex;align-items:center;gap:8px;margin-top:8px}
.progress-bar{flex:1;height:6px;background:#f5f5f5;border-radius:6px}
.progress-fill{height:6px;background:#52c41a;border-radius:6px}
.section-title{font-weight:600;margin:8px 0}
.material-item{display:flex;justify-content:space-between;border-bottom:1px solid #f5f5f5;padding:8px 0}
.code{color:#333}
.mstatus{color:#666}
.empty{color:#888;padding:12px}
.loading-overlay{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(255,255,255,0.6);display:flex;justify-content:center;align-items:center}

