<view class="container">
  <view class="order-card">
    <view class="row">
      <text class="label">订单号</text>
      <text class="value">{{orderNo}}</text>
    </view>
    <view class="row">
      <text class="label">客户</text>
      <text class="value">{{customerName}}</text>
    </view>
    <view class="row">
      <text class="label">下单日期</text>
      <text class="value">{{orderDate}}</text>
    </view>
    <view class="row">
      <text class="label">状态</text>
      <text class="status">{{statusText}}</text>
    </view>
    <view class="progress">
      <view class="progress-bar"><view class="progress-fill" style="width: {{progress}}%"></view></view>
      <text class="progress-text">{{progress}}%</text>
    </view>
  </view>

  <view class="section-title">物料列表</view>
  <view class="material-list">
    <view wx:if="{{materials.length === 0}}" class="empty">暂无物料数据</view>
    <view wx:else>
      <view class="material-item" wx:for="{{materials}}" wx:key="materialId">
        <text class="code">{{item.code}}</text>
        <text class="mstatus">{{item.statusText}}</text>
      </view>
    </view>
  </view>
</view>

<view class="loading-overlay" wx:if="{{isLoading}}">
  <view class="loading-content"><text>加载中...</text></view>
</view>

