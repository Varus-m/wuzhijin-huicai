.container {
  display: flex;
  flex-direction: column;
  height: 100vh; /* 改为固定高度 */
  overflow: hidden; /* 禁止整体滚动 */
  background: #f5f7fa;
  padding: 0;
}

/* 搜索栏样式 */
.search-section {
  background: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-bar:focus-within {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  background: transparent;
  border: none;
  outline: none;
  height: 56rpx;
}

.search-input::placeholder {
  color: #999999;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  margin-left: 16rpx;
  border-radius: 50%;
  background: #667eea;
  transition: all 0.3s ease;
}

.search-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 状态筛选样式 */
.status-filter {
  display: flex;
  white-space: nowrap;
  padding-bottom: 8rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 24rpx;
  background: #f0f2f5;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.filter-item:not(.active):active {
  background: #e6e8eb;
  transform: scale(0.98);
}

.filter-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 左右分栏布局 */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
  position: relative;
  height: 0; /* 关键：让 flex item 正确计算高度，配合 flex: 1 */
  width: 100%; /* 确保宽度撑满 */
}

.side-menu {
  width: 180rpx;
  background: #f5f7fa;
  border-right: 1rpx solid #e0e0e0;
  height: 100%;
  flex-shrink: 0; /* 防止被压缩 */
}

.content-area {
  flex: 1;
  height: 100%;
  background: #ffffff;
  width: 0; /* 关键：让 flex: 1 生效且能滚动 */
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 16rpx;
  position: relative;
  transition: all 0.3s ease;
}

.menu-item.active {
  background: #ffffff;
  color: #667eea;
  font-weight: 600;
}

.menu-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  background: #667eea;
  border-radius: 0 4rpx 4rpx 0;
}

.menu-title {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.menu-count {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

.group-list {
  padding: 0 24rpx 24rpx;
}

.order-group {
  margin-bottom: 24rpx;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  position: sticky;
  top: 0;
  background: #ffffff;
  z-index: 10;
  border-bottom: 1rpx solid #f0f2f5;
}

.group-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  padding-left: 16rpx;
  border-left: 6rpx solid #667eea;
}

.group-action {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.group-count {
  font-size: 24rpx;
  color: #999999;
}

.group-arrow {
  font-size: 20rpx;
  color: #999999;
  transition: transform 0.3s ease;
}

.group-arrow.expanded {
  transform: rotate(180deg);
}

.group-content {
  padding-top: 16rpx;
}

.group-empty {
  padding: 32rpx;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

/* 订单卡片样式微调 */
.order-item {
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f2f5;
}

/* 隐藏原有列表样式 */
.order-list {
  display: none;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999999;
}

.order-items {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.order-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  border-color: #667eea;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.order-no {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.order-status.pending {
  background: #fff3cd;
  color: #856404;
}

.order-status.producing {
  background: #cce5ff;
  color: #004085;
}

.order-status.shipped {
  background: #d1ecf1;
  color: #0c5460;
}

.order-status.completed {
  background: #d4edda;
  color: #155724;
}

.order-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  margin-right: 8rpx;
  min-width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.info-value.price {
  color: #ff4d4f;
  font-weight: 600;
}

.info-value.remark {
  color: #999999;
  font-size: 26rpx;
  /* 允许长文本换行 */
  white-space: pre-wrap;
  word-break: break-all;
}

.material-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.material-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #ffffff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.material-code {
  color: #333333;
  font-weight: 500;
}

.material-status {
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.material-status.pending {
  background: #fff3cd;
  color: #856404;
}

.material-status.producing {
  background: #cce5ff;
  color: #004085;
}

.material-status.completed {
  background: #d4edda;
  color: #155724;
}

.material-more {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  align-self: center;
}

.order-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666666;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  gap: 16rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f0f2f5;
  border-top: 3rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f2f5;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: #ffffff;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  font-weight: 500;
}

.delivery-status-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
  font-weight: 500;
}

.delivery-status-tag.status-0 {
  background: #f0f2f5;
  color: #999999;
}

.delivery-status-tag.status-1 {
  background: #d4edda;
  color: #155724;
}

.delivery-status-tag.status-2 {
  background: #cce5ff;
  color: #004085;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 80rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.loading-content .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 24rpx;
}

.loading-content .loading-text {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

/* 企业绑定弹窗样式 */
.erp-bind-section {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.bind-modal {
  background: #ffffff;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
}

.modal-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.input-field {
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  background: #f8f9fa;
}

.input-field:focus {
  border-color: #667eea;
  background: #ffffff;
}

.bind-btn {
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  border: none;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}

.bind-btn:active {
  opacity: 0.8;
}
