.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

.user-avatar {
  margin-right: 32rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f0f2f5;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.user-bind-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.user-bind-status.bound {
  background: #d4edda;
  color: #155724;
}

.user-bind-status.unbound {
  background: #f8d7da;
  color: #721c24;
}

/* 企业信息 */
.enterprise-section {
  background: #ffffff;
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.edit-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #f0f2f5;
  border-radius: 24rpx;
}

.edit-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #666666;
}

.enterprise-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 菜单列表 */
.menu-section {
  background: #ffffff;
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f9f9f9;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
  opacity: 0.3;
}

/* 操作按钮 */
.action-section {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.action-btn.secondary {
  background: #f0f2f5;
  color: #666666;
}

.action-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 弹窗通用样式 */
.edit-modal, .settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  margin: -10rpx;
}

/* 编辑表单样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333333;
}

.input-field:focus {
  border-color: #667eea;
  background: #ffffff;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background: #f0f2f5;
  color: #666666;
}

.btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

/* 设置列表样式 */
.settings-body {
  max-height: 60vh;
}

.setting-group {
  margin-bottom: 32rpx;
}

.group-title {
  display: block;
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f2f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333333;
}
